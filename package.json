{
  "name": "book-finder",
  "version": "0.1.0",
  "description": "TypeScript backend service that searches every Texas public library by ISBN",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/node.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ test/",
    "typecheck": "tsc --noEmit",
    "validate": "tsx src/scripts/validate-systems.ts",
    "validate:json": "tsx src/scripts/validate-systems.ts --json",
    "playwright:install": "npx playwright install chromium",
    "scan": "tsx src/scripts/catalog-scan/index.ts",
    "scan:dry": "tsx src/scripts/catalog-scan/index.ts --dry-run"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@natlibfi/marc-record": "^10.0.0",
    "bottleneck": "^2.19.5",
    "cheerio": "^1.0.0",
    "fast-xml-parser": "^4.5.0",
    "hono": "^4.6.0",
    "isbn3": "^1.1.51",
    "lru-cache": "^11.0.0",
    "p-limit": "^6.1.0",
    "pg": "^8.13.0",
    "p-retry": "^6.2.0",
    "pino": "^9.5.0",
    "playwright-core": "^1.58.2",
    "yaml": "^2.6.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "pino-pretty": "^13.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
